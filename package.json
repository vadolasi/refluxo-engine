{
	"name": "refluxo-engine",
	"version": "1.0.0-beta.1",
	"description": "Stateless, snapshot-based workflow engine",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts --clean",
		"dev": "tsup src/index.ts --format cjs,esm --watch --dts",
		"lint": "tsc --noEmit",
		"prepublishOnly": "pnpm run build"
	},
	"keywords": [
		"workflow",
		"engine",
		"stateless",
		"serverless",
		"snapshot",
		"automation",
		"state-machine",
		"orchestration",
		"n8n",
		"lambda",
		"cloudflare-workers",
		"typescript",
		"json-schema",
		"pipeline",
		"low-code"
	],
	"author": "Vitor Daniel <vitor036daniel@gmail.com>",
	"license": "MIT",
	"homepage": "https://github.com/vadolasi/refluxo-engine#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vadolasi/refluxo-engine.git"
	},
	"bugs": {
		"url": "https://github.com/vadolasi/refluxo-engine/issues"
	},
	"categories": [
		"AI",
		"Other"
	],
	"packageManager": "pnpm@10.26.2",
	"sideEffects": false,
	"size-limit": [
		{
			"path": "dist/index.mjs",
			"limit": "50 KB"
		}
	],
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@size-limit/preset-small-lib": "^12.0.0",
		"@types/jexl": "^2.3.4",
		"@types/json-schema": "^7.0.15",
		"size-limit": "^12.0.0",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"ajv": "^8.17.1",
		"jexl": "^2.3.0"
	}
}
