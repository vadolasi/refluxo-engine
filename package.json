{
	"name": "refluxo-engine",
	"version": "1.3.1",
	"description": "Stateless, snapshot-based workflow engine",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts --clean",
		"dev": "tsup src/index.ts --format cjs,esm --watch --dts",
		"lint": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage --coverage.reporter=lcov",
		"prepare": "lefthook install",
		"prepublishOnly": "pnpm run build",
		"docs:dev": "pnpm typedoc && vitepress dev",
		"docs:build": "vitepress build",
		"docs:preview": "vitepress preview"
	},
	"keywords": [
		"workflow",
		"engine",
		"stateless",
		"serverless",
		"snapshot",
		"automation",
		"state-machine",
		"orchestration",
		"n8n",
		"lambda",
		"cloudflare-workers",
		"typescript",
		"json-schema",
		"pipeline",
		"low-code"
	],
	"author": "Vitor Daniel <vitor036daniel@gmail.com>",
	"license": "MIT",
	"homepage": "https://refluxo-engine.vitor036daniel.workers.dev",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vadolasi/refluxo-engine.git"
	},
	"bugs": {
		"url": "https://github.com/vadolasi/refluxo-engine/issues"
	},
	"categories": [
		"AI",
		"Other"
	],
	"packageManager": "pnpm@10.26.2",
	"sideEffects": false,
	"size-limit": [
		{
			"path": "dist/index.mjs",
			"limit": "50 KB"
		}
	],
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@braintree/sanitize-url": "^7.1.1",
		"@catppuccin/vitepress": "^0.1.2",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@size-limit/preset-small-lib": "^12.0.0",
		"@standard-schema/spec": "^1.1.0",
		"@types/jexl": "^2.3.4",
		"@types/json-schema": "^7.0.15",
		"@vitest/coverage-v8": "^4.0.16",
		"commitizen": "^4.3.1",
		"cytoscape": "^3.33.1",
		"cytoscape-cose-bilkent": "^4.1.0",
		"cz-conventional-changelog": "^3.3.0",
		"dayjs": "^1.11.19",
		"debug": "^4.4.3",
		"lefthook": "^2.0.13",
		"mermaid": "^11.12.2",
		"size-limit": "^12.0.0",
		"tsup": "^8.5.1",
		"typedoc": "^0.28.15",
		"typedoc-plugin-frontmatter": "^1.3.1",
		"typedoc-plugin-markdown": "^4.9.0",
		"typedoc-vitepress-theme": "^1.1.2",
		"typescript": "^5.9.3",
		"valibot": "^1.2.0",
		"vitepress": "2.0.0-alpha.15",
		"vitepress-plugin-llms": "^1.10.0",
		"vitepress-plugin-mermaid": "^2.0.17",
		"vitest": "^4.0.16",
		"vue": "^3.5.26"
	},
	"dependencies": {
		"jexl": "^2.3.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
