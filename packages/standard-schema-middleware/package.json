{
	"name": "@refluxo/standard-schema-middleware",
	"version": "1.0.0",
	"description": "Standard Schema validation middleware for Refluxo",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts --clean",
		"dev": "tsup src/index.ts --format cjs,esm --watch --dts",
		"lint": "tsc --noEmit"
	},
	"keywords": [
		"workflow",
		"middleware",
		"validation",
		"schema",
		"standard-schema",
		"zod",
		"valibot",
		"arktype"
	],
	"author": "Vitor Daniel <vitor036daniel@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vadolasi/refluxo.git",
		"directory": "packages/standard-schema-middleware"
	},
	"homepage": "https://github.com/vadolasi/refluxo/tree/main/packages/standard-schema-middleware#readme",
	"bugs": {
		"url": "https://github.com/vadolasi/refluxo/issues"
	},
	"dependencies": {
		"@standard-schema/spec": "^1.0.0"
	},
	"peerDependencies": {
		"@refluxo/core": "workspace:*"
	},
	"devDependencies": {
		"@refluxo/core": "workspace:*",
		"tsup": "^8.0.0",
		"typescript": "^5.0.0",
		"valibot": "^1.0.0"
	}
}
