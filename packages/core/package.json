{
	"name": "@refluxo/core",
	"version": "0.3.0",
	"description": "Stateless, snapshot-based workflow engine",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./standard-schema-validator": {
			"types": "./dist/standard-schema-validator.d.ts",
			"import": "./dist/standard-schema-validator.mjs",
			"require": "./dist/standard-schema-validator.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts src/standard-schema-validator.ts --format cjs,esm --dts --clean",
		"dev": "tsup src/index.ts src/standard-schema-validator.ts --format cjs,esm --watch --dts",
		"lint": "tsc --noEmit"
	},
	"keywords": [
		"workflow",
		"engine",
		"stateless",
		"serverless",
		"snapshot"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vadolasi/refluxo.git",
		"directory": "packages/core"
	},
	"homepage": "https://github.com/vadolasi/refluxo-engine/tree/main/packages/core#readme",
	"bugs": {
		"url": "https://github.com/vadolasi/refluxo-engine/issues"
	},
	"author": "Vitor Daniel <vitor036daniel@gmail.com>",
	"license": "MIT",
	"peerDependencies": {
		"@standard-schema/spec": "^1.0.0"
	},
	"peerDependenciesMeta": {
		"@standard-schema/spec": {
			"optional": true
		}
	},
	"devDependencies": {
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"valibot": "^1.2.0"
	}
}
